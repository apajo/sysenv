#!/bin/bash

info () {
  lines=$(cat $1 | grep -e "^#%" | sed -e "s/#%//g" )

  if [ "$lines" ]
  then
      echo "  " "$lines"
  fi
}

cat << EOF
SYNOPSIS
  sysenv [command] ...

DESCRIPTION
  sysenv - manage your system configuration

COMMANDS
EOF

for entry in `find ./bin/ -maxdepth 1 -not -type d`; do
  info $entry
done

echo -e "\n"
