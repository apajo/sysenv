#!/bin/bash -i

source $HOME/.bashrc

repo=$2;
repo=${repo:-$SYSENV_REPO};

branch=$3
device=$(whoami)
branch=${branch:-$device};
branch=${branch:-$SYSENV_BRANCH};

[ -z "$SYSENV_REPO" ] && read -p "Device repository ($repo): " repo;
repo=${repo:-$SYSENV_REPO};

[ -z "$SYSENV_BRANCH" ] && read -p "Device name ($branch): " branch;
branch=${branch:-$SYSENV_BRANCH};

syadm clone "$repo" -w /
syadm checkout "$branch"
syadm fetch
